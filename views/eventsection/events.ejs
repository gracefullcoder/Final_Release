<%- include("../includes/header.ejs") %>
    <title>Our Events</title>
</head>

<body style="overflow: auto;">



    <section class="section countdown bg-black-10 text-center" aria-label="countdown" id="workshop">
        <div class="container">

            <p class="section-subtitle label-2">WELCOME</p>

            <h2 class="headline-1 section-title">Event Section Details</h2>
            <div style="overflow-x: auto;">
                <table class="table table-striped table-bordered border-white"
                    style="color:antiquewhite; border: 10px; border-color: brown;">
                    <thead>
                        <tr>
                            <th scope="col">DATE</th>
                            <th scope="col">IMAGECARD</th>
                            <th scope="col">SUBTITILE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">Delete Event</th>
                            <th scope="col">Edit Event</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(event of events){ %>
                            <tr>
                                <td>
                                    <%=event.date%>
                                </td>
                                <td>
                                    <%=event.subtitle%>
                                </td>
                                <td>
                                    <%=event.title%>
                                </td>
                                <td>
                                    <h1><a href="<%=event.image%>" target="_blank" style="color: greenyellow;" >View!</a></h1>
                                </td>
                                <td>
                                    <form method="post" action="/admin/eventsection/<%=event._id%>?_method=DELETE">
                                        <button>
                                            Delete!
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form method="get" action="/admin/eventsection/edit/<%=event._id%>">
                                        <button>
                                            EDIT!
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>


            <form id="addfield" enctype="multipart/form-data" class="addfield" method="post" action="/admin/eventsection" >
                <label for="name" class="formlabel">Add a new Event</label>
                <input type="date" id="name" name="date" placeholder="Date" required>
                <input type="text" name="subtitle" placeholder="subtitle" required>
                <input type="text" name="title" placeholder="title" required>
                <input type="file" name="myFile" id="myFile"  required>
                <button type="submit" class="btn btn-primary">ADD!</button>
            </form>

        </div>
    </section>
</body>

</html>